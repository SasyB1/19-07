@model IEnumerable<LeGuardie.Models.Dto.AnagraficaDto>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center mb-4">Anagrafiche</h1>

<p class="text-center">
    <a asp-action="RegisterUser" class="btn btn-success">Crea Nuovo</a>
</p>

<table class="table table-hover table-striped">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Cognome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Indirizzo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Citta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().CAP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().CodiceFiscale)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Cognome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Indirizzo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Citta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CAP)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CodiceFiscale)
                </td>
            </tr>
        }
    </tbody>
</table>
