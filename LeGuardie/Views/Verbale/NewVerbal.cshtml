@model LeGuardie.Models.Verbale

@{
    ViewData["Title"] = "NewVerbal";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Crea un nuovo Verbale</h1>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                     Verbale
                </div>
                <div class="card-body">
                    <form asp-action="NewVerbal">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="IdUtente" class="form-label">Utente</label>
                            <select asp-for="IdUtente" class="form-select" aria-label="Seleziona un utente">
                                <option value="">Seleziona un utente</option>
                                @foreach (var utente in ViewBag.Utenti)
                                {
                                    <option value="@utente.IdUtente">@utente.Nome @utente.Cognome</option>
                                }
                            </select>
                            <span asp-validation-for="IdUtente" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="IdViolazione" class="form-label">Violazione</label>
                            <select asp-for="IdViolazione" class="form-select" aria-label="Seleziona una violazione">
                                <option value="">Seleziona una violazione</option>
                                @foreach (var violazione in ViewBag.Violazioni)
                                {
                                    <option value="@violazione.IdViolazione">@violazione.Descrizione</option>
                                }
                            </select>
                            <span asp-validation-for="IdViolazione" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DataViolazione" class="form-label">Data Violazione</label>
                            <input asp-for="DataViolazione" type="date" class="form-control" />
                            <span asp-validation-for="DataViolazione" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="IndirizzoViolazione" class="form-label">Indirizzo Violazione</label>
                            <input asp-for="IndirizzoViolazione" class="form-control" />
                            <span asp-validation-for="IndirizzoViolazione" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NomeAgente" class="form-label">Nome Agente</label>
                            <input asp-for="NomeAgente" class="form-control" />
                            <span asp-validation-for="NomeAgente" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DataTrascrizione" class="form-label">Data Trascrizione</label>
                            <input asp-for="DataTrascrizione" type="date" class="form-control" />
                            <span asp-validation-for="DataTrascrizione" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Importo" class="form-label">Importo</label>
                            <input asp-for="Importo" class="form-control" />
                            <span asp-validation-for="Importo" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PuntiDecurtati" class="form-label">Punti Decurtati</label>
                            <input asp-for="PuntiDecurtati" class="form-control" />
                            <span asp-validation-for="PuntiDecurtati" class="text-danger"></span>
                        </div>

                        <div class="text-center">
                            <input type="submit" value="Crea" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-secondary">Torna alla lista</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
