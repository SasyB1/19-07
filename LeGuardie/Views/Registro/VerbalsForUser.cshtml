@model IEnumerable<LeGuardie.Models.Dto.VerbaleDto>

@{
    ViewData["Title"] = "VerbalsForUser";
}

<h1 class="text-center mb-4">Verbali per Utente</h1>
<div class="text-center mb-4">
    <a asp-action="Index" class="btn btn-primary">Torna all'elenco</a>
</div>
<table class="table table-hover table-striped">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Cognome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().TotaleVerbali)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cognome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotaleVerbali)
                </td>
            </tr>
        }
    </tbody>
</table>
