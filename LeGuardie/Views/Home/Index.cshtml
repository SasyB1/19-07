@{
    ViewData["Title"] = "Home Page";
}

<div class="hero  text-light text-center py-5">
    <h1 class="fw-bold text-light textShadow mb-4">Benvenuti nel Sito della Polizia Municipale di Epicode</h1>    
    <a href="#ultimeNotizie" class="btn btn-primary btn-lg ">Scopri le ultime Notizie</a>
</div>

<div class="container my-5">
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="info-box bg-light p-4">
                <h2>Anagrafiche</h2>
                <p>Visiona o aggiungi trasgressori.</p>
                <a href="@Url.Action("Index", "Anagrafica")" class="btn btn-primary">Leggi di Più</a>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="info-box bg-light p-4">
                <h2>Verbali</h2>
                <p>Visiona o aggiungi verbali.</p>
                <a href="@Url.Action("Index", "Verbale")" class="btn btn-primary">Leggi di Più</a>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="info-box bg-light p-4">
                <h2>Registro</h2>
                <p>Vai al registro</p>
                <a href="@Url.Action("Index", "Registro")" class="btn btn-primary">Clicca per piu' info</a>
